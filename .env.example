# MySQL Database Configuration
# Обязательные параметры для подключения к базе данных Sakila
MYSQL_HOST=127.0.0.1
MYSQL_USER=root
MYSQL_PASS=your_mysql_password
MYSQL_DB=sakila

# MongoDB Configuration (опционально)
# Если MongoDB недоступен, приложение продолжит работу без логирования
MONGO_URI_PREFIX=mongodb://
MONGO_URI_SUFFIX=@localhost:27017/
MONGO_USER=your_mongo_user
MONGO_PASS=your_mongo_password
MONGO_DB=python_films
MONGO_COLL=search_logs

# Application Settings
# Количество результатов на одной странице
LIMIT=10
